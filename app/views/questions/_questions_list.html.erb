<% question_list.each do |question| %>
  <div class="container mb-sm">
    <p class="mb-sm<%= question.hidden? ? ' hidden-question' : ''%>">
      <div class="mt-sm container">
        <p class="mb text-sm text-grey">
          Вопрос <%= link_to "##{question.id}", question_path(question) %>
          для юзера <%= link_to display_nickname(question.user), user_path(question.user) %>
        </p>

        <%= render partial: 'questions/question', locals: {question: question} %>
      </div>
    </p>
  </div>
<% end %>
