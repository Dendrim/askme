<% if flash[:question_errors].present? %>
  <div class="mt">
    <% flash[:question_errors].each do |message| %>
      <p class="mb-sm text-red"><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with model: question, data: {turbo: false} do |form| %>
  <p><%= form.label :body, 'Текст вопроса' %></p>
  <p><%= form.text_area :body, rows: 5, class: 'form-text-area' %></p>

  <p class="mt"><%= form.label :user_id, 'ID пользователя'%></p>
  <p><%= form.number_field :user_id, class: 'form-text-field'%></p>

  <p class="mt"><%= form.submit 'Сохранить', class: 'button button-main' %>
<% end %>
