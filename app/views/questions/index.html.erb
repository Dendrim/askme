<div class="container mb">
  <h2 class="title-lg mb">
    Недавно добавились
  </h2>

  <div class="users-box">
    <% @users.each do |user| %>
      <%= render partial: 'users/user_avatar', locals: {user: user} %>
    <% end %>
  </div>
</div>

<div class="container mb">
  <h2 class="title-lg mb">
    Используемые хаштеги
  </h2>

  <div class="container">
    <%= render partial: 'hashtags/hashtag', collection: Hashtag.where.associated(:questions).distinct %>
  </div>
</div>

<div class="container mt-sm mb-sm">
  <h2 class="title-lg">
    <%= inclination(@questions.count, 'Последний', 'Последние', 'Последние') %>
    <%= @questions.count %>
    <%= inclination(@questions.count, 'вопрос', 'вопроса', 'вопросов') %>
  </h2>
</div>

<%= render partial: 'questions/questions_list', locals: {question_list: @questions} %>
